#:kivy 1.9.1
#:import backupsd data.screens.db_kv.backupsd

BackupSD:
    popbackup: popbackup.__self__
    name: 'BackupSD'
    on_pre_enter: app.root.ids.actp.ac_prev = self.parent

    BoxLayoutS:
        id: backupsdb
        orientation: 'vertical'

        Popup:
            id: popbackup
            title: "Backup succeeded"
            on_parent:
                if self.parent == backupsdb: self.parent.remove_widget(self)
            size_hint: [.9, .7]

            BoxLayoutS:
                spacing: '14dp'
                orientation: 'vertical'

                RstDocument:
                    text: root.poplbtext
                    size_hint_y: .7
                    base_font_size: 28 + self.height*.01  # default 31

                ScaleButton:
                    text: 'Close'
                    on_release: popbackup.dismiss()
                    size_hint_y: .3

        RstDocument:
            text: root.lbtext
            base_font_size: 28 + self.height*.005  # default 31

        ScaleButton:
            text: root.bttext
            on_release: root.callback()
            size_hint_y: .3
