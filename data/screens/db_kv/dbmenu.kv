#:kivy 1.9.1
# #:import parse_color kivy.parser.parse_color

# Used for info text about DB functions
<DBinfo@Label>:
    font_size: sp(12) + self.parent.height*.01
    text_size: self.width-10, self.height-10
    valign: 'top'
    color: 0, 0, 0, 1
    line_height: 1.1
    markup: True

    canvas.before:
        Color:
            rgba: 0.9, 0.9, 0.92, 1  # parse_color('e5e6e9ff')
        Rectangle:
            pos: self.pos
            size: self.size

# Small difference in text scaling for pop-up text
<DBinfoPop@DBinfo>:
    font_size: sp(12) + self.parent.height*.015

KanjiOriginScreen:
    name: 'DBmenu'
    #fullscreen: True
    on_pre_enter: app.root.ids.actp.ac_prev = app

#    BoxLayout:  # Should specify this in dbmanager.kv
#        orientation: 'vertical'
#        spacing: '14dp'

    ScaleButton:
        text: "Backup to SD-card info"
        on_release: self.parent.parent.parent.go_screen(1)

    ScaleButton:
        text: "Restore from SD-card info"
        on_release: self.parent.parent.parent.go_screen(2)

    ScaleButton:
        text: "Import .csv koohii info"
        on_release: self.parent.parent.parent.go_screen(3)

    ScaleButton:
        text: "Reset KanjiOrigin info"
        on_release: self.parent.parent.parent.go_screen(4)