#:kivy 1.9.1

KanjiOriginScreen:
    name: 'dbmenu'
    #fullscreen: True

#    BoxLayout:  # Should specify this in dbmanager.kv
#        orientation: 'vertical'
#        spacing: '14dp'

    ScaleButton:
        text: "Backup to SD-card info"
        on_release: self.parent.parent.parent.go_screen(1)

    ScaleButton:
        text: "Restore from SD-card info"
